# 1. Import necessary modules
# 2. Create the main window with a unique title, size, background color, and branding
# 3. Add widgets for selecting and customizing pizza orders
# 4. Add a button to place the order and display order status
# 5. Add a button to view order history
# 6. Define functions to handle order placement, status updates, and order history
# 7. Run the main event loop

import tkinter as tk
from tkinter import messagebox

# Function to place an order
def place_order():
    size = size_var.get()
    toppings = [topping for topping, var in toppings_vars.items() if var.get()]
    order = f"Size: {size}, Toppings: {', '.join(toppings)}"
    order_status.set(f"Order placed: {order}")
    order_history.append(order)
    messagebox.showinfo("Order Status", "Your order has been placed successfully!")

# Function to view order history
def view_order_history():
    history = "\n".join(order_history)
    messagebox.showinfo("Order History", f"Order History:\n{history}")

# Create the main window
root = tk.Tk()
root.title("Pizza Order Manager")
root.geometry("400x400")
root.configure(bg="lightyellow")

# Branding
branding_label = tk.Label(root, text="Welcome to Pizza Order Manager!", bg="lightyellow", font=("Helvetica", 16))
branding_label.pack(pady=10)

# Pizza size selection
size_label = tk.Label(root, text="Select Pizza Size:", bg="lightyellow")
size_label.pack(pady=5)
size_var = tk.StringVar(value="Medium")
sizes = ["Small", "Medium", "Large"]
for size in sizes:
    tk.Radiobutton(root, text=size, variable=size_var, value=size, bg="lightyellow").pack(anchor=tk.W)

# Toppings selection
toppings_label = tk.Label(root, text="Select Toppings:", bg="lightyellow")
toppings_label.pack(pady=5)
toppings_vars = {}
toppings = ["Pepperoni", "Mushrooms", "Onions", "Sausage", "Bacon"]
for topping in toppings:
    var = tk.BooleanVar()
    toppings_vars[topping] = var
    tk.Checkbutton(root, text=topping, variable=var, bg="lightyellow").pack(anchor=tk.W)

# Order status
order_status = tk.StringVar()
order_status_label = tk.Label(root, textvariable=order_status, bg="lightyellow")
order_status_label.pack(pady=10)

# Buttons
place_order_button = tk.Button(root, text="Place Order", command=place_order)
place_order_button.pack(pady=5)

view_history_button = tk.Button(root, text="View Order History", command=view_order_history)
view_history_button.pack(pady=5)

# Order history
order_history = []

# Run the application
root.mainloop()
